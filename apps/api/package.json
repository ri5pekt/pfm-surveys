{
    "name": "api",
    "version": "1.0.0",
    "private": true,
    "description": "Fastify API server for survey platform",
    "type": "module",
    "scripts": {
        "dev": "tsx watch --clear-screen=false src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "lint": "eslint src --ext .ts",
        "type-check": "tsc --noEmit",
        "test": "vitest",
        "db:init": "tsx scripts/init-db.ts",
        "migrate:latest": "tsx scripts/migrate-latest.ts",
        "migrate:rollback": "tsx scripts/migrate-rollback.ts",
        "migrate:create": "tsx scripts/migrate-create.ts",
        "seed": "node --loader tsx scripts/seed.ts"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/jwt": "^8.0.0",
        "@fastify/multipart": "^8.1.0",
        "@fastify/rate-limit": "^9.1.0",
        "@types/bcrypt": "^6.0.0",
        "bcrypt": "^6.0.0",
        "bullmq": "^5.1.0",
        "dotenv": "^16.4.1",
        "fastify": "^4.25.2",
        "fastify-plugin": "^5.1.0",
        "ioredis": "^5.3.2",
        "kysely": "^0.27.2",
        "nodemailer": "^6.9.16",
        "pg": "^8.11.3",
        "pino": "^8.17.2",
        "pino-pretty": "^10.3.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "@types/pg": "^8.10.9",
        "@typescript-eslint/eslint-plugin": "^6.19.0",
        "@typescript-eslint/parser": "^6.19.0",
        "eslint": "^8.56.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
}
